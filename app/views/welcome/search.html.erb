<h1 class="center">Searching for "<%= @query %>"</h1>

<% if [@dreams, @dreamers, @steps, @hashtags].all?(&:empty?) %>
  <hr>
  <p>There are no results for your search.<br>
    Your query might be too specific.</p>
<% else %>
  <div class="search">
    <ul>
      <h3 class="left search">Dreams</h3>
      <hr>
      <% if @dreams.empty? %>
        <p>There are no dreams that match your search.</p>
      <% end %>

      <% @dreams.each do |dream| %>
      <%= render partial: "dream_results.html.erb", locals: {dream: dream} %>
      <% end %>

      <h3 class="left">Hashtags</h3>
      <hr>

       <% if @hashtags.empty? %>
        <p>There are no dreamtags that match your search.</p>
      <% end %>

      <%= render partial: "hashtag_results.html.erb", locals: {hashtags: @hashtags} %>

      <h3 class="left">Dreamers</h3>
      <hr>
      <% if @dreamers.empty? %>
        <p>There are no dreamers that match your search.</p>
      <% end %>

      <% @dreamers.each do |dreamer| %>
        <li><%= link_to dreamer.username, profile_path(dreamer) %></li>
      <% end %>

      <h3 class="left">Recipes</h3>
      <hr>
      <% if @steps.empty? %>
        <p>There are no recipes that match your search.</p>
      <% end %>

      <% @steps.each do |step| %>
        <li><%= link_to step.description, step_path(step) %></li>
      <% end %>
    </ul>
  </div>
<% end %>