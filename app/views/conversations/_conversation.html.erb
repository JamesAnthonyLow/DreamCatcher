<li class="list-group-item clearfix">
  <div class="btn-group-vertical pull-right">
    <% if conversation.is_trashed?(current_dreamer) %>
      <%= link_to 'Restore', restore_conversation_path(conversation), class: 'btn btn-xs btn-info sub-button', method: :post %>
    <% else %>
      <%= link_to image_tag("trash-bin.png", class: "icon"), conversation_path(conversation), class: 'btn btn-xs btn-danger sub-button', method: :delete,
                  data: {confirm: 'Are you sure?'} %>
      <% if conversation.is_unread?(current_dreamer) %>
        <%= link_to 'Mark as read', mark_as_read_conversation_path(conversation),
                  class: 'btn btn-xs btn-info sub-button', method: :post %>
      <% end %>
    <% end %>
  </div>
  Subject: <%= link_to conversation.subject, conversation_path(conversation) %><br>
  Date: <small>(<span class="text-muted"><%= conversation.last_message.created_at.strftime("%-d %B %Y, %H:%M:%S") %></span>)</small><br>
  Sender: <%= render 'conversations/participants', conversation: conversation %>
</li>